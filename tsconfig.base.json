{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./tsc-out",
    "paths": {
      "test/*": [ "test/*" ],
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
  },
}
