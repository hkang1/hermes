{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./tsc-out",
    "rootDir": "./src",
    "strict": true,
    "target": "es2018"
  },
  "include": [ "./src/**/*.ts" ]
}
