{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./tsc-out",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "src/**/*.test.ts" ],
  "files": [ "test/jest.d.ts" ]
}
